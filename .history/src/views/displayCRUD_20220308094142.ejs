<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Get CRUD</title>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
    }

    .btn-edit {
      display: inline-block;
      text-align: center;
      line-height: 25px;
      background-color: orange;
      outline: none;
      border: none;
      border-radius: 3px;
      height: 25px;
      width: 60px;
      cursor: pointer;
      text-decoration: none;
    }

    .btn-delete {
      display: inline-block;
      text-align: center;
      line-height: 25px;
      background-color: red;
      outline: none;
      border: none;
      border-radius: 3px;
      height: 25px;
      width: 60px;
      cursor: pointer;
      text-decoration: none;
    }
  </style>
</head>

<body>
  <table style="width: 100%">
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>Action</th>
    </tr>
    <% for(var i=0; i < allUser.length; i++) { %>
      <tr>
        <td>
          <%= allUser[i].email %>
        </td>
        <td>
          <%= allUser[i].firstName %>
        </td>
        <td>
          <%= allUser[i].lastName %>
        </td>
        <td>
          <%= allUser[i].address %>
        </td>
        <td>
          <a href="/edit-crud?id=<%= allUser[i].id %>" class="btn-edit" type="button">Edit</a>
          <a class="btn-delete" type="button">Delete</a>
        </td>
      </tr>
      <% } %>
  </table>
</body>

</html>